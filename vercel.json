{
  "buildCommand": "npm run build",
  "outputDirectory": "./",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": null,
  "functions": {},
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/gestion-procesos",
      "dest": "/src/paginas/gestion_procesos.html"
    },
    {
      "src": "/sistemas-operativos", 
      "dest": "/src/paginas/sistemas_operativos.html"
    },
    {
      "src": "/gestion-memoria",
      "dest": "/src/paginas/gestion_memoria.html"
    },
    {
      "src": "/gestion-almacenamiento",
      "dest": "/src/paginas/gestion_almacenamiento.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
