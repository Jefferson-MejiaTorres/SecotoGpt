{
  "buildCommand": "npm run build",
  "outputDirectory": "./",
  "installCommand": "npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/gestion-procesos",
      "destination": "/src/paginas/gestion_procesos.html"
    },
    {
      "source": "/sistemas-operativos", 
      "destination": "/src/paginas/sistemas_operativos.html"
    },
    {
      "source": "/gestion-memoria",
      "destination": "/src/paginas/gestion_memoria.html"
    },
    {
      "source": "/gestion-almacenamiento",
      "destination": "/src/paginas/gestion_almacenamiento.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
